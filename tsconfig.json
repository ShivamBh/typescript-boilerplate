{
	"compilerOptions": {
		"baseUrl": "src",
		"paths": {
			"@lib/*": ["lib/*"],
			"@model/*": ["model/*"],
			"@app/*": ["app/*"],
			"@controller/*": ["controller/*"],
			"@service/*": ["service/*"],
			"@configs/*": ["config/*"]
		},
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
	},
	"lib": ["es2015"],
	"include": ["src", "knex"],
	"exclude": ["node_modules"]
}
